<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!--===================== Cryptosleep Neurotrainer ======================-->

  <ThingDef ParentName="BuildingBase">
    <defName>MM_CryptosleepNeurotrainer</defName>
    <label>cryptosleep neurotraining pod</label>
    <description>Heavily modified hi-tech casket for inducing a short term cryptosleep. Designed to take advantage of the fact that cryptosleep leaves person's mind highly vulnerable to hypsnosis and suggestion to implant knowledge of some basic and advanced skills.</description>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/MM_CryptosleepNeurotrainerPod</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,3)</drawSize>
      <shadowData>
        <volume>(0.83, 0.3, 1.7)</volume>
      </shadowData>
    </graphicData>
    <researchPrerequisites>
		<li>MM_CryptoSleepNeuroTraining</li>
	</researchPrerequisites>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>42</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <WorkToBuild>5400</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(2,2)</size>
    <designationCategory>Misc</designationCategory>
    <hasInteractionCell>true</hasInteractionCell>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <interactionCellOffset>(-1,0,0)</interactionCellOffset>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>600</basePowerConsumption>
      </li>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>1.5</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
      </li>
      <li Class="MadmanSleepTrainer.SleepTrainerCore_Properties">
        <enterSound>BiosculpterPod_Enter</enterSound>
        <exitSound>BiosculpterPod_Exit</exitSound>
        <selectCycleColor>(0.321, 1, 0.349)</selectCycleColor>
        <biotunedCycleSpeedFactor>1.00</biotunedCycleSpeedFactor>
        <hediffsOnFailure>
          <li>
            <hediff>Frail</hediff>
            <weight>1</weight>
          </li>
          <li>
            <hediff>Blindness</hediff>
            <weight>3</weight>
          </li>
        </hediffsOnFailure>
        <graphicData>
          <texPath>Things/Building/MM_CryptosleepNeurotrainerPod_open</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>(3, 3)</drawSize>
        </graphicData>
      </li>
      <li Class="MadmanSleepTrainer.SkillLearnerCycle_Properties">
        <key>LearningCycle</key>
        <label>Learning Cycle</label>
        <cycleIntervalLength>30000</cycleIntervalLength>
        <numDifferentCycleLengths>5</numDifferentCycleLengths>
        <xpRewardPerDay>5000</xpRewardPerDay>
        <description>Increases skill xp based on duration of cycle.</description>
        <iconPath>UI/Gizmos/BiosculpterCycleHealing</iconPath>
        <durationDays>0.1</durationDays>
        <operatingColor>(0.554,0.887,1.000)</operatingColor>
      </li>
      <li Class="MadmanSleepTrainer.ApplierCycle_Properties">
        <key>SpecialCycle</key>
        <label>Special Cycle</label>
        <description>Grants special traits or hediffs when finished.</description>
        <iconPath>UI/Gizmos/BiosculpterCycleHealing</iconPath>
        <extraRequiredIngredients>
          <MedicineUltratech>2</MedicineUltratech>
        </extraRequiredIngredients>
        <subCycles>
          <li>
            <subCycleName>testCycleA</subCycleName>
            <cycleLength>30000</cycleLength>
            <iconFile>MM_Animals</iconFile>
            <hediffToApplyOnCycleComplete>Frail</hediffToApplyOnCycleComplete>
            <traitToApplyOnCycleComplete>Brawler</traitToApplyOnCycleComplete>
          </li>
        </subCycles>
        <durationDays>0.1</durationDays>
        <operatingColor>(0.554,0.887,1.000)</operatingColor>
      </li>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>MM_NeuroServer</li>
        </linkableFacilities>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <defaultPlacingRot>North</defaultPlacingRot>
    <building>
      <isPlayerEjectable>true</isPlayerEjectable>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <costList>
      <Steel>50</Steel>
	  <Plasteel>50</Plasteel>
      <Uranium>25</Uranium>
      <ComponentIndustrial>5</ComponentIndustrial>
      <ComponentSpacer>3</ComponentSpacer>
    </costList>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
  </ThingDef>

	<!--===================== NeuroServer ======================-->

  <ThingDef ParentName="BuildingBase">
    <defName>MM_NeuroServer</defName>
    <label>cryptosleep acceleration server</label>
    <description>A complex device that provides a noticeable boost to information processing power of cryptosleep neurotraining pods when placed in close proximity.</description>
    <graphicData>
      <texPath>Things/Building/MM_NeuroServer</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,3)</drawSize>
    </graphicData>
    <uiIconScale>0.75</uiIconScale>
    <researchPrerequisites>
		<li>MM_EnhancedCryptosleepNeurotraining</li>
	</researchPrerequisites>
    <size>(1,2)</size>
    <rotatable>true</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.6</fillPercent>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>8000</WorkToBuild>
      <Mass>40</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <costList>
      <Plasteel>50</Plasteel>
      <Gold>50</Gold>
      <ComponentIndustrial>4</ComponentIndustrial>
	  <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>400</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.15</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>2</maxSimultaneous>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
	<defaultPlacingRot>East</defaultPlacingRot>
    <constructionSkillPrerequisite>12</constructionSkillPrerequisite>
  </ThingDef>

</Defs>
